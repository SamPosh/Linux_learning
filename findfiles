# to find all the files in current directory and sub director

find
find .

# To find all the files with the name 'test' in folder mytest
find /mytest -name test
find /mytest -iname test # this will ignore the case.

# To find the files older than 10 days but less than 13 days 
find /mytest -mtime +10 -mtime -13

# find the files in current dir which is greater than given size
find . -size +1M
find . -size +1G

# find files which are start with the name sc
find /tmp -iname sc*

# display the file name in long list 
find /tmp -iname sc* -ls 

# To find the directories in /tmp
find /tmp -type d

